<config>
    <modules>
        <Forkel_OpenGraph>
            <version>1.1.0</version>
        </Forkel_OpenGraph>
    </modules>
    <global>
        <blocks>
            <forkel_opengraph>
                <class>Forkel_OpenGraph_Block</class>
            </forkel_opengraph>
        </blocks>
        <helpers>
            <forkel_opengraph>
                <class>Forkel_OpenGraph_Helper</class>
            </forkel_opengraph>
        </helpers>
        <models>
            <forkel_opengraph>
                <class>Forkel_OpenGraph_Model</class>
                <resourceModel>forkel_opengraph_resource</resourceModel>
            </forkel_opengraph>
            <forkel_opengraph_resource>
                <class>Forkel_OpenGraph_Model_Resource</class>
                <entities>
                    <entity>
                        <table>forkel_opengraph_entity</table>
                    </entity>
                </entities>
            </forkel_opengraph_resource>
        </models>
        <resources>
            <forkel_opengraph_setup>
                <setup>
                    <module>Forkel_OpenGraph</module>
                </setup>
            </forkel_opengraph_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Forkel_OpenGraph before="Mage_Adminhtml">Forkel_OpenGraph_Adminhtml</Forkel_OpenGraph>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <forkel_opengraph>
                    <file>forkel/opengraph.xml</file>
                </forkel_opengraph>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <routers>
            <forkel_opengraph>
                <use>standard</use>
                <args>
                    <module>Forkel_OpenGraph</module>
                    <frontName>forkel_opengraph</frontName>
                </args>
            </forkel_opengraph>
        </routers>
        <layout>
            <updates>
                <forkel_opengraph>
                    <file>forkel/opengraph.xml</file>
                </forkel_opengraph>
            </updates>
        </layout>
    </frontend>
</config>
